@model  IEnumerable<SideInfrastructure.Model.ViewModel.ProjectViewModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="wrap" class="container" style="margin-top:10rem;">
    <div class="row-fluid">
        @{
            var i=0;
            var pre=0;
            var post=0;
            var md= Model.ToList();
        }
        @foreach (var item in md)
        {
            <div class="col-sm-6 col-md-4">
                <div class="thumbnail">
                    @{
                                                   
                      var imurl = item.CoverImage + "?height=170&width=400";
                    }
                    <a href='@Url.Action("Details", new { id = item.Id })'>   <img src='@imurl' alt="300x200"></a>
                    <div class="caption" style="position:absolute;top:50%;margin-top:-2px;background-color:white;opacity:.5;">
                        <h4 style="text-align:center;">@item.Title</h4>

                    </div>
                </div>
            </div>

        }
    </div>
</div>
